{% extends 'base.html.twig' %}

{% block title %}NewsLetter index{% endblock %}

{% block body %}
    <h1>NewsLetter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>IpAdress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news_letter in news_letters %}
            <tr>
                <td>{{ news_letter.id }}</td>
                <td>{{ news_letter.email }}</td>
                <td>{{ news_letter.createdAt ? news_letter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news_letter.updatedAt ? news_letter.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news_letter.ipAdress }}</td>
                <td>
                    <a href="{{ path('app_news_letter_show', {'id': news_letter.id}) }}">show</a>
                    <a href="{{ path('app_news_letter_edit', {'id': news_letter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_letter_new') }}">Create new</a>
{% endblock %}
